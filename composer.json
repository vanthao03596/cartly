{
    "name": "vanthao03596/cartly",
    "description": "A flexible, customizable shopping cart library for Laravel with dynamic pricing",
    "keywords": ["laravel", "cart", "shopping", "ecommerce"],
    "license": "MIT",
    "type": "library",
    "require": {
        "php": "^8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/events": "^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^2.0|^3.0",
        "laravel/pint": "^1.18",
        "orchestra/testbench": "^8.0|^9.2|^10.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Cart\\": "src/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Cart\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cart\\CartServiceProvider"
            ],
            "aliases": {
                "Cart": "Cart\\Cart"
            }
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "baseline": "vendor/bin/phpstan analyse --generate-baseline --memory-limit=2G",
        "format": "vendor/bin/pint",
        "format-test": "vendor/bin/pint --test"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
